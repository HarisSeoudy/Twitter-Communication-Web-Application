<!doctype html>
<html lang="en">
    <head>
        <% include ../partials/head %>

        <!-- Audio Player Start-->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="audioParent">
                    <audio class="audio" id="a_player">
                        Your browser does not support the audio element.
                    </audio>
                </div>
            </div>
        </div>
        <!-- Audio Player Finish -->

    </head>
    <body onLoad="initPage()">

        <!-- Nav Bar Start  -->
        <nav class="navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="../../img/ibm-logo.png" alt="IBM Logo" style="width:115px; height:46px">
                </a>
                <a class="navbar-brand" href="/">
                    <img src="../../img/ibm-watson.png" alt="IBM Watson Logo" style="width:52px; height:48px">&nbsp;
                    <img src="../../img/with-watson-white.png" alt="With Watson Logo" style="width:90px; height:52px">
                </a>
            </div>
        </nav>
        <!-- Nav Bar End  -->

        <!-- Main Body Start-->
        <div class="col-lg-12 text-center">

            <!-- Text Start -->
            <h1 class="main-text">What would you like to converse about?</h1>
            <p class="sub-text">Please enter your search in the box below</p>
            <!-- Text End -->

            <!-- Form Start  -->
            <form action="/results" method="post">

                <!-- Search Bar Start  -->
                <div class="input-group col-lg-12 col-md-12 col-sm-12">
                    <div class="input-group-prepend">
                        <button class="btn btn-dark" type="button" id="microphone"><i class="fas fa-microphone"></i></button>
                    </div>
                    <input name="userSearch" id="speech" type="text" class="form-control" value="<%= userInput %>" aria-label="<%= userInput %>" required>
                    <div class="input-group-append">
                        <button class="btn btn-dark" type="button" id="readText" onclick="readResult(this);"><i class="fas fa-comment"></i></button>
                        <button class="btn btn-dark" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <!-- Search Bar End  -->

                <!-- Tone Selection Start -->
                <p class="sub-text tone-text">Tone selection (optional)</p>
                <div class="form-check form-check-inline sub-text">
                    <input class="form-check-input" type="radio" name="tone" id="inlineRadio1" value="positive">
                    <label class="form-check-label" for="inlineRadio1">Positive</label>
                </div>
                <div class="form-check form-check-inline sub-text">
                    <input class="form-check-input" type="radio" name="tone" id="inlineRadio2" value="neautral">
                    <label class="form-check-label" for="inlineRadio2">Neutral</label>
                </div>
                <div class="form-check form-check-inline sub-text">
                    <input class="form-check-input" type="radio" name="tone" id="inlineRadio3" value="negative">
                    <label class="form-check-label" for="inlineRadio3">Negative</label>
                </div>
                <!-- Tone Selection End -->

            </form>
            <!-- Form End  -->
            </div>

        </div>
        <!-- Main Body End  -->

        <br>

        <!-- Results Divider Start -->
        <div class="d-flex">
            <hr class="my-auto flex-grow-1">
            <div class="px-4 sub-text">Results</div>
            <hr class="my-auto flex-grow-1">
        </div>
        <!-- Results Divider End -->

        <br>

        <!-- If results is not empty, run this code -->
        <% if(result.length > 0){ %>
            <!-- Display Results Start -->
            <% for (var i = 0; i < result.length; i++) { %>
                <div class="col-12">
                    <button class="btn btn-dark result-button" id="readText<%= i %>" type="button" onclick="readResult(this);">
                            <p class="text-center result-button-text" id="speech<%= i %>"><%= result[i] %></p>
                    </button>
                </div>
            <!-- Display Results End --> 
            <br>
            <% } %>
            <!-- Footer Start -->
            <a href="https://haris.co" target="_blank" style="text-decoration : none">
                <footer class="footer bg-dark">
                    <div class="text-center py-3 footer-text">Made with  
                        <span style="color: rgb(236, 85, 85);">
                            <i class="fas fa-heart fa-lg fa-beat"></i>
                        </span> by Haris Seoudy
                    </div>
                </footer>
            </a>
            <!-- Footer End -->

        <!-- If results are empty, run this code -->    
        <% } else { %> 
            <!-- Alert Start-->
            <div class="col-12">
                <div class="alert alert-danger alert-text text-center" role="alert">
                    <strong>Sorry!</strong> Your search returned no results, please try again.
                </div>
            </div>
            <!-- Alert End-->

            <!-- Footer -->
            <a href="https://haris.co" target="_blank" style="text-decoration : none">
                <footer class="footer fixed-bottom bg-dark">
                    <div class="text-center py-3 footer-text">Made with  
                        <span style="color: rgb(236, 85, 85);">
                            <i class="fas fa-heart fa-lg fa-beat"></i>
                        </span> by Haris Seoudy
                    </div>
                </footer>
            </a>
            <!-- Footer End -->
        <% } %>

        <% include ../partials/foot %>
    </body>
</html>





